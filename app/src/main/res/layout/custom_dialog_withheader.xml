<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/custom_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/custom_dialog_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_layout_bg"
            android:orientation="vertical"
            android:padding="5dp">

            <com.rechargeapp.customview.CustomTextView
                android:id="@+id/text_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/text_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="end">

                <com.rechargeapp.customview.CustomTextViewBold
                    android:id="@+id/btn_no_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAllCaps="true"
                    android:text="@string/no"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/text_14sp" />

                <com.rechargeapp.customview.CustomTextViewBold
                    android:id="@+id/btn_yes_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="20dp"
                    android:padding="5dp"
                    android:text="@string/yes"
                    android:textAllCaps="true"
                    android:textColor="@color/whiteColor"
                    android:textSize="@dimen/text_14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>

