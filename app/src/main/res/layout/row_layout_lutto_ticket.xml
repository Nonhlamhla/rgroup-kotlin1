<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/lotto_top_round">

            <ImageView
                android:id="@+id/lotto_ticket_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@mipmap/close_icon_ball_screen"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:id="@+id/row_ticket_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/lotto_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.rechargeapp.customview.CustomTextView
                    android:id="@+id/spin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/spin"
                    android:layout_marginStart="5dp"
                    android:padding="10dp"
                    android:textColor="@color/whiteColor"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_14sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/lotto_top"/>

                <com.rechargeapp.customview.CustomTextView
                    android:id="@+id/select_ball"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:padding="10dp"
                    android:textSize="@dimen/text_14sp"
                    android:layout_height="wrap_content"
                    android:text="@string/select_ball"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/whiteColor"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</layout>
